<article>
  <section>
      <h1>Funcion√°rios</h1>
      <%= link_to (image_tag "add.svg"), new_perfil_path %>

      <div class="barra-pesquisa">
          <div class="barra-pesquisa1">
          <input type="text" class="pesquisa" placeholder="Pesquise aqui..."/>
          <%= image_tag "Pesquisa.svg" %>
          </div>
      </div>

      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Email</th>
            <th>Cidade</th>

          </tr>
        </thead>
        <tbody>
        
          <% @profiles.each do |profile| %>    
              <tr>               
                <td><%= link_to profile.nome , profile %></td>
                <td><%= profile.cargo %></td>
                <td><%= profile.email %></td>
                <td><%= profile.cidade %></td>
              </tr>
          <% end %>

        </tbody>
      </table>

      
      
  </section>

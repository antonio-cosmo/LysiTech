
  <section>
      <h1>Clientes</h1>
      <%= link_to (image_tag "user-plus-light.png"), new_cliente_path %>

      <div class="c-pesquisa">
        <input type="text"  placeholder="Pesquise aqui..."/>
        <%= image_tag "Pesquisa.svg" %>
      </div>

      <table>
        <thead>
          <tr>
            <th>Código</th>
            <th>Ativo</th>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>Ver</th>

          </tr>
        </thead>
        <tbody>
        
          <% @clientes.each do |cliente| %>    
              <tr>               
                <td><%= cliente.id %></td>
                <td><%= cliente.ativo ? "S" : "N" %></td>
                <td><%= cliente.razao_social %></td>
                <td><%= cliente.nome_fantasia %></td>
                <td><%= link_to (image_tag 'eye.png'), cliente %></td>


              </tr>
          <% end %>

        </tbody>
      </table>

  </section>

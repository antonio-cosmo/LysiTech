<main class="wrapper">
    <div class="container">
        <div class="c-logo">
          <%= image_tag "Logo.svg" %>
        </div>
        
        <div id="notice" <%='style=visibility:visible' if flash[:alert] %>>
          <%if flash[:alert] %>
            <div class="alert"><%= flash[:alert]%></div>
          <%end%>
        </div>

        <div class="c-login">
            <%= form_with model: @user, url: '/sign_in', method: :post do |f| %>
                <%= f.text_field :usuario, placeholder:'Usuario', class: 'field' %>
                <%= f.password_field :senha, placeholder: "Senha", class: 'field' %>
                <%= f.submit "Entrar", class: 'btn-submit' %>
                <button class="recuperar" type="button">Recuperar senha</button>
            <% end %>   
        </div>
    </div>
</main>



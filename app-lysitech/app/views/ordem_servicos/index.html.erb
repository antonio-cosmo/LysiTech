
  <section class="chamados">
      <h1>Chamados</h1>
      <%= link_to (image_tag "plus.svg"), new_ordem_servico_path, class: 'new' %> 
      <div class="c-search">
        <form action="/dashboard/ordem_servicos" method="get" class="c-pesquisa">
          <input type="text"  placeholder="Pesquise por titulo..." name="search" value="<%= @value_search %>" />
          <button type="submit"><%= image_tag "Pesquisa.svg" %></button>
        </form>
        <a href='/dashboard/ordem_servicos'>Listar Todos</a>
      </div>
     

      <table>
        <thead>
          <tr>
            <th>CÃ³digo</th>
            <th>Data Abertura</th>
            <th>Titulo</th>
            <th>Estatus</th>
            <th>Data Encerramento</th>
            <th>Ver</th>

          </tr>
        </thead>
        <tbody>
          <% @ordem_servicos.each do |ordem_servico| %>    
              <tr>               
                <td><%= ordem_servico.id %></td>
                <td>
                  <%= ordem_servico.dt_abertura.strftime("%d/%m/%Y %H:%M:%S") if ordem_servico.dt_abertura %>
                </td>
                <td><%= ordem_servico.titulo %></td>
                <td>
                  <% if ordem_servico.estatus == 1 %>
                      Aberto
                  <% elsif ordem_servico.estatus == 2 %>
                      Em andamento
                  <% else%>
                      Concluido
                  <% end %>
                </td>
                <td>
                  <%= ordem_servico.dt_encerramento.strftime("%d/%m/%Y %H:%M:%S") if ordem_servico.dt_encerramento %>
                </td>
                <td><%= link_to (image_tag 'eye.png') , ordem_servico %></td>
              </tr>
          <% end %>
        </tbody>
      </table>

  </section>
